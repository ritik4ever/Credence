{
    "name": "credence-contracts",
    "version": "1.0.0",
    "description": "Smart contracts for Credence decentralized polling platform",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
        "deploy:sepolia": "hardhat run scripts/deploy.js --network celo-sepolia",
        "deploy:alfajores": "hardhat run scripts/deploy.js --network alfajores",
        "deploy:mainnet": "hardhat run scripts/deploy.js --network celo",
        "verify:sepolia": "hardhat verify --network celo-sepolia",
        "verify:alfajores": "hardhat verify --network alfajores",
        "clean": "hardhat clean",
        "node": "hardhat node"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^2.0.0",
        "@nomiclabs/hardhat-etherscan": "^3.1.0",
        "hardhat": "^2.12.0",
        "dotenv": "^16.0.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.8.0"
    }
}